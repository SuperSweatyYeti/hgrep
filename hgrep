
#!/bin/bash


while getopts lie: opt; do
	case $opt in
		l) 		line1=" i=1"; line2="\"\\033[31m\"i\":\"\"\\033[0m\","; line3=" \$0 ; i++"; ;;
		i) 		set="IGNORECASE=1;";  ;;
		e) 		pattern=$OPTARG; printer="print" ;;
		\?)		echo -e "NON existent flag\nAccepted Flags: -l -i -e";
				exit 1; ;;
	esac
done

awk 'FNR<=1{print; next} BEGIN{IGNORECASE=0; '"$set"' '"$line1"' } gsub(/('"$pattern"')/, "\033[31m&\033[0m")  {'"$printer"' '"$line2"' '"$line3"'} '



